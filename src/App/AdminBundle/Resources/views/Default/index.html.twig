{% extends '::admin.html.twig' %}

{% block body %}
<div class="row-fluid">
    <div class="span6">
        <div id="last-projects">
            <h3>Projects</h3>
            <hr />
            {% if projects | length > 0 %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th width="2">Id</th>
                        <th>Full Name</th>
                    </tr>
                </thead>
                <tbody>
                    {% for project in projects %}
                    <tr>
                        <td>#{{ project.id }}</td>
                        <td>{{ project.fullName }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% else %}
            <p>No projects yet.</p>
            {% endif %}
        </div>
    </div>
    <div class="span6">
        <div id="last-users">
            <h3>Users</h3>
            <hr />
            {% if users | length > 0 %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th width="2">Id</th>
                        <th>Username</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr>
                        <td>#{{ user.id }}</td>
                        <td>{{ user.username }} (<a href="https://github.com/{{ user.username }}"><i class="fa fa-github"></i></a>)</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% else %}
            <p>No users yet.</p>
            {% endif %}
        </div>
    </div>
</div>

<h3>Builds</h3>
<hr />

{% if builds | length > 0 %}
<table class="table table-striped">
    <thead>
        <tr>
            <th width="2">Id</th>
            <th>Builder Host</th>
            <th>Project</th>
            <th>Ref.</th>
            <th>Date</th>
            <th>Status</th>
            <th>Payload</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        {% for build in builds %}
        <tr>
            <td><a href="{{ path('app_core_build_output', { id: build.id }) }}">#{{ build.id }}</a></td>
            <td>{{ build.builderHost }}</td>
            <td>{{ build.project.fullName}} (#{{ build.project.id }})</td>
            <td>{{ build.ref }}</td>
            <td><abbr class="timeago" title="{{ build.createdAt | date('c') }}">{{ build.createdAt | date('Y-m-d H:i:s') }}</abbr></td>
            <td><span data-status="{{ build.status }}" id="build-{{ build.id }}-status" class="label label-{{ build.statusLabelClass }}">{{ build.statusLabel }}</span></td>
            <td>
                {% if build.payload %}
                <a href="{{ path('app_admin_build_payload', { id: build.id }) }}">payload</a>
                {% endif %}
            </td>
            <td>
                <a class="btn btn-small" href="{{ path('app_admin_project_trigger', { id: build.project.id, hash: build.hash }) }}">trigger</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
<p>No builds yet.</p>
{% endif %}
{% endblock body %}