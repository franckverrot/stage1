<form method="post" action="{{ path('app_core_feedback_create') }}">
    <input type="hidden" name="feedback[current_project_id]" id="feedback_current_project_id" value="{{ app.request.attributes.get('current_project_id') }}" />
    <input type="hidden" name="feedback[current_build_id]" id="feedback_current_build_id" value="{{ app.request.attributes.get('current_build_id') }}" />
    <input type="hidden" name="feedback[url]" id="feedback_url" value="{{ app.request.uri }}" />
    <input type="hidden" name="feedback[return]" id="feedback_return" value="{{ app.request.uri }}" />

    <div id="feedback" class="modal hide fade">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">Ã—</button>
            <h3>Contact Us</h3>
        </div>
        <div class="modal-body">
            <div id="feedback-compose-form">
                <form id="feedback-form" method="post" action="{{ path('app_core_feedback_create') }}">
                    <input type="hidden" name="feedback[current_project_id]" id="feedback_current_project_id" value="{{ app.request.attributes.get('current_project_id') }}" />
                    <input type="hidden" name="feedback[current_build_id]" id="feedback_current_build_id" value="{{ app.request.attributes.get('current_build_id') }}" />
                    <input type="hidden" name="feedback[url]" id="feedback_url" value="{{ app.request.uri }}" />
                    <input type="hidden" name="feedback[return]" id="feedback_return" value="{{ app.request.uri }}" />

                    <textarea autofocus name="feedback[message]" id="feedback_message"></textarea>
                </form>
            </div>
            <ul>
                <li>Message will be sent as <strong>{{ app.user.username }}</strong>.</li>
                <li>We will use the address <strong>{{ app.user.email }}</strong> to send you a reply.</li>
            </ul>
        </div>
        <div class="modal-footer">
            <button id="feedback-send" class="btn btn-primary">Send</button>
            <button class="btn" data-dismiss="modal">Close</button>
        </div>
    </div>
</form>